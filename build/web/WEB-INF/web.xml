<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 1. University Name Parameter (Required for Part 1) -->
    <context-param>
        <param-name>universityName</param-name>
        <param-value>Adama Science and Technology University</param-value>
    </context-param>

    <!-- 2. RegisterServlet Configuration -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- 3. ConfirmationServlet Configuration -->
    <servlet>
        <servlet-name>ConfirmationServlet</servlet-name>
        <servlet-class>com.servlet.ConfirmationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmationServlet</servlet-name>
        <url-pattern>/ConfirmationServlet</url-pattern>
    </servlet-mapping>

    <!-- 4. studentservlet Configuration (CRUD) -->
    <servlet>
        <servlet-name>studentservlet</servlet-name>
        <servlet-class>com.servlet.studentservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentservlet</servlet-name>
        <url-pattern>/studentservlet</url-pattern>
    </servlet-mapping>

    <!-- 5. SET THE HOME PAGE (This fixes the 404 at the start) -->
    <welcome-file-list>
        <welcome-file>register.html</welcome-file>
    </welcome-file-list>

</web-app>